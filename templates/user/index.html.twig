{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="card mt-4">
 <div class="card-header bg-success text-center">
    <h1>Liste User</h1>
</div>
<div class="card-body bg-light grey">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.login }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-sm btn-success">Visualiser</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="btn btn-sm btn-success">Create new</a>
    <a href="{{ path('accueil') }}" class="btn btn-sm btn-success">Accueil</a>
    </div>
</div>
{% endblock %}
