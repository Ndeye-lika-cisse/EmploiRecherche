{% extends 'base.html.twig' %}

{% block title %}CV{% endblock %}

{% block body %}
<div class="card">
<div class="card-header bg-success text-center  ">
    <h1>Visuaiser des CV</h1>
</div>
<div class="card-body bg-light grey ">
    <table class="table">
        <tbody>
            <tr> 
                <th>Id</th>
                <td>{{ cv.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ cv.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ cv.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ cv.age }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ cv.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cv.email }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ cv.specialite }}</td>
            </tr>
            <tr>
                <th>Niveauetude</th>
                <td>{{ cv.niveauetude }}</td>
            </tr>
            <tr>
                <th>ExperienceProfessionnelle</th>
                <td>{{ cv.ExperienceProfessionnelle }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cv_index') }}" class="btn btn-sm btn-success">Retour liste</a>

    <a href="{{ path('cv_edit', {'id': cv.id}) }}" class="btn btn-sm btn-warning" >Modifier</a>
</br>
    {{ include('cv/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
